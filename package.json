{
  "name": "pos-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:admin": "cd admin-dashboard && npm run build",
    "build:pos": "cd pos-client && npm run build",
    "build:online": "cd online-ordering && npm run build",
    "dev:admin": "cd admin-dashboard && npm run dev",
    "dev:pos": "cd pos-client && npm run dev",
    "dev:online": "cd online-ordering && npm run dev",
    "test": "npm run test:lint && npm run test:build && npm run test:unit",
    "test:lint": "npm run lint:admin && npm run lint:pos && npm run lint:online",
    "test:build": "npm run build:admin && npm run build:pos && npm run build:online",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:e2e": "cd test-automation && npm run test:e2e",
    "test:e2e:ui": "cd test-automation && npm run test:e2e:ui",
    "test:e2e:headed": "cd test-automation && npm run test:e2e:headed",
    "test:e2e:debug": "cd test-automation && npm run test:e2e:debug",
    "test:e2e:report": "cd test-automation && npm run test:e2e:report",
    "test:all": "npm run test && npm run test:e2e",
    "install:all": "npm install && cd admin-dashboard && npm install && cd ../pos-client && npm install && cd ../online-ordering && npm install && cd ../test-automation && npm install",
    "install:browsers": "cd test-automation && npm run install:browsers",
    "lint:admin": "cd admin-dashboard && npm run lint",
    "lint:pos": "cd pos-client && npm run lint",
    "lint:online": "cd online-ordering && npm run lint"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "ts-jest": "^29.4.0",
    "typescript-eslint": "^8.30.1"
  }
} 